extends layout

block content
  .container 
    h1= title
    form(  method="POST" enctype="multipart/form-data")
        .mb-3
            label.form-label(for='exampleInputEmail1') Mahsulot nomi
            if data
                input.form-control#exampleInputEmail1(type='text' name="title" placeholder="Mahsulot nomi"  value= data.title)
            else 
                input.form-control#exampleInputEmail1(type='text' name="title" placeholder="Mahsulot nomi"  )
        .mb-3
            label.form-label(for='exampleInputPassword1') Mahsulotning narxi
            if data
                input.form-control#exampleInputEmail1(type='text' name="price" placeholder="Mahsulotning narxi" value= data.price)
            else 
                input.form-control#exampleInputEmail1(type='text' name="price" placeholder="Mahsulotning narxi"  )            
        .mb-3
            label.form-label(for='exampleInputPassword1') Mahsulotning chegirmasi
            if data
                input.form-control#exampleInputEmail1(type='text' name="sale" placeholder="Mahsulotning chegirmasi" value= data.sale)
            else 
                input.form-control#exampleInputEmail1(type='text' name="sale" placeholder="Mahsulotning chegirmasi"  )               
        .mb-3
            select(name="category").form-control
                option(value="chevrolet") chevrolet
                option(value="bmw") bmw  
                option(value="mercedes") mercedes
                option(value="lada") lada
        .mb-3
            label.form-label(for='exampleInputPassword1') Mahsulot haqida batafsil
            if data
                textarea(name="comment", cols="30", rows="10").form-control#exampleInputPassword1= data.comment 
            else 
                 textarea(name="comment", cols="30", rows="10").form-control#exampleInputPassword1 
        .mb-3
            label.form-label(for='exampleInputPassword1') Mahsulotning  rasmi
            input(type="file" name="img").form-control#exampleInputPassword1
        button.btn.btn-primary(type='submit')= btn